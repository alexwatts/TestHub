pipeline {

    agent {
        kubernetes{
            yaml '''
                apiVersion: v1
                kind: Pod
                spec:
                  securityContext:
                    runAsUser: 0
                  containers:
                  - name: docker
                    image: docker:latest
                    command:
                    - cat
                    tty: true
                    volumeMounts:
                    - mountPath: /var/run/docker.sock
                      name: docker-sock
                  - name: gradle
                    image: registry.digitalocean.com/do-k8s-ecr/gradle-cache
                    command:
                    - cat
                    tty: true
                  volumes:
                  - name: docker-sock
                    hostPath:
                      path: /var/run/docker.sock
                '''
        }
    }

    stages {
        stage('clone') {
            steps {
                sh "git clone https://github.com/alexwatts/TestHub"
            }
        }
        stage('build') {
            steps {
              container('gradle') {
                  sh 'cp -r /cache /home/gradle/.gradle'
                  sh "gradle build pitest -p TestHub --info"
              }
            }
        }
        stage('publish') {
            steps {
              container('gradle') {
                pitmutation minimumKillRatio: 80.0, mutationStatsFile: 'TestHub/build/reports/pitest/mutations.xml'

                publish html
                    publishHTML target: [
                        allowMissing: false,
                        alwaysLinkToLastBuild: false,
                        keepAll: true,
                        reportDir: 'TestHub/build/reports/pitest',
                        reportFiles: 'index.html',
                        reportName: 'Mutation Report'
                      ]

              }
            }
        }
    }
}
